    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "My Attach to Chrome",
            "port": 4000,
            "webRoot": "${workspaceFolder}\\_site",
            "address": "127.0.0.1"
        }
    ]
}